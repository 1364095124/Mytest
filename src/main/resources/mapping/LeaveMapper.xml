<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lh.dao.LeaveMapper">
    <sql id="leaveItme">
        leave_id,department_Name,account,start_place,end_place,start_time,end_time,init_time,
        type,sum,note,state,processInstanceId,isDeleted
    </sql>

    <insert id="addLeave" parameterType="LeaveForm">
        INSERT
        INTO
          leaveForms
        VALUES
          (
            uuid(),
            #{department_Name},
            #{account},
            #{start_place},
            #{end_place},
            #{start_time},
            #{end_time},
            #{init_time},
            #{type},
            #{sum},
            #{note},
            '审核中',
            null,
            0
          )


    </insert>

    <select id="queryLeave" parameterType="LeaveForm" resultType="LeaveForm">
        SELECT
          *
        FROM
          leaveForms
        WHERE
          isDeleted=0
        <if test="leave_id!=null">
            AND leave_id=#{leave_id}
        </if>
        <if test="account!=null">
            AND account=#{account}
        </if>
        <if test="init_time!=null">
            AND init_time=#{init_time}
        </if>
    </select>

    <update id="updateLeave" parameterType="LeaveForm">
        UPDATE
          leaveForms
        <set>
            <if test="state!=null">
                state=#{state},
            </if>
            <if test="processInstanceId!=null">
                processInstanceId=#{processInstanceId}
            </if>
        </set>

        <where>
            <if test="leave_id!=null">
                leave_id=#{leave_id}
            </if>
            <if test="account!=null">
                account=#{account}
            </if>
        </where>

    </update>

    <update id="deleteLeave" parameterType="string">
        UPDATE
          leaveForms
        SET
          isDeleted=1
        WHERE
          leave_id=#{leave_id}
    </update>
</mapper>